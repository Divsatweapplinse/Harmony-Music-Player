<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_artwork_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_artwork_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/album_artwork"
        android:scaleType="centerCrop" />

    <View android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#40000000" />

    <TextView
        android:id="@+id/header_song_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/content_padding"
        android:layout_marginLeft="16dp"
        android:paddingLeft="@dimen/small_content_padding"
        android:textColor="@color/nav_header_secondary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/header_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/header_song_artist"
        android:layout_marginLeft="16dp"
        android:paddingLeft="@dimen/small_content_padding"
        android:textColor="@color/nav_header_primary_text"
        android:textSize="14sp" />
</RelativeLayout>